<stromDeploymentConfig>

    <stormEnabled>false</stormEnabled>

    <jar>org.wso2.carbon.event.receiver.storm.jar</jar>

    <management>
        <managers>
            <manager>
                <hostName>localhost</hostName>
                <port>8904</port>
            </manager>
        </managers>
        <reconnectionInterval>20000</reconnectionInterval>
        <heartbeatInterval>5000</heartbeatInterval>
    </management>

    <transport>
        <portRange>
            <min>15000</min>
            <max>15100</max>
        </portRange>
        <reconnectionInterval>20000</reconnectionInterval>
        <topologyResubmitInterval>10000</topologyResubmitInterval>
    </transport>

    <node>
        <receiver enable="true"/>
        <receiver enable="true"/>
        <manager enable="true">
            <hostName>localhost</hostName>
            <port>8904</port>
        </manager>
    </node>

</stromDeploymentConfig>

